# Server Configuration
NODE_ENV=development # or production
PORT=3000
API_PREFIX=/api/v1

# Database Configuration - Development
DEV_DATABASE_URL="postgresql://user:password@localhost:5432/dev_database"
DEV_SHADOW_DATABASE_URL="postgresql://user:password@localhost:5432/dev_shadow_db"

# Database Configuration - Production
PROD_DATABASE_URL="postgresql://user:password@production-host:5432/prod_database"

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Cors Configuration
CORS_ORIGIN=http://localhost:3000

# Redis Configuration (if needed)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# AWS Configuration (if needed)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name

# Email Configuration (if needed)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@yourdomain.com

# Logging Configuration
LOG_LEVEL=debug # production should use 'info' or 'warn'

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Optional Third-party Services
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true

# Note: Replace all placeholder values with your actual configuration
# Never commit actual .env files to version control 